<h1>Posts</h1>
<div class="usa-section usa-section-light usa-graphic-list">
	<% @articles.each do |article| %>
		<div class="usa-media-block-body usa-width-one-third">
			<%= content_tag('h3') do %>
		     <%= link_to article.title, article_path(article)  %>
		  <% end %>
		  <%= content_tag('p', article.preview) %>
		</div>
	<% end %>
</div>

<% if logged_in? %>
	<%= content_tag 'h5' do %>
		<%= link_to "Create a New Article", new_article_path, class: "new_article" %>
	<% end %>
<% end %>