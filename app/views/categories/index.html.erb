<h1>All Categories</h1>

<ul id="categories">
  <% @categories.each do |category| %>
    <li>
      <%= link_to category.name, category_path(category)  %>
      <% if logged_in? %>
      		<%= link_to "delete", category_path(category), method: :delete, data: {confirm: "Really delete this category?"} %>
      <% end %>
    </li>
  <% end %>
</ul>