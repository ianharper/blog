<h1>Articles Categorized with <%= @category.name %></h1>

<div class="usa-section usa-section-light usa-graphic-list">
  <% @category.articles.each do |article| %>
    <div class="usa-media-block-body usa-width-one-third">
		<%= content_tag('h3') do %>
	    	<%= link_to article.title, article_path(article)  %>
		<% end %>
	  	<%= content_tag('p', article.preview) %>
	</div>
  <% end %>
</div>